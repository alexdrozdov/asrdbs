{
    "multi": {
        "tag-base": "#grammar",
        "@self": {
            "clarifies": "#term",
            "@break": "#grammar-link"
        },
        "@other": {
            "clarifies": "#term"
        }
    }
}

# In

{
    "@continue": "#grammar-link",
    "clarify": {
        "tag": "#adjective-noun",
        "@pos": ["adjective"],
        "@position": {"1": "left"},
        "@link": {
            "label": "#adjective-noun"
        },
        "@other": {
            "@pos": ["noun"],
            "@case": ["ablative", "prepositional"]
        }
    }
}

#

{
    "@continue": "#grammar-link",
    "clarify": {
        "@pos": ["adjective"],
        "clarify": {
            "tag": "#noun-adjective",
            "@equal-properties": {"1": ["case", "count", "gender"]},
            "@link": {
                "label": "#noun-adjective"
            }
        },
        "@other": {
            "@pos": ["noun"]
        }
    }
}

#
{
    "@continue": "#grammar-link",
    "clarify": {
        "@pos": ["noun"],
        "clarify": {
            "tag": "#noun-noun",
            "not": {
                "@case": ["nominative", "accusative"]
            },
            "@link": {
                "label": "#noun-noun"
            }
        },
        "@other": {
            "@pos": ["noun"]
        }
    }
}

#

{
    "@continue": "#grammar-link",
    "clarify": {
        "@pos": ["noun"],
        "clarify": {
            "tag": "#pronoun-noun",
            "not": {
                "@case": ["nominative", "accusative"]
            },
            "@other": {
                "@case": ["nominative"]
            },
            "@link": {
                "label": "#pronoun-noun"
            }
        },
        "@other": {
            "@pos": ["pronoun"]
        }
    }
}

#

{
    "@continue": "#grammar-link",
    "clarify": {
        "@pos": ["numeral"],
        "clarify": {
            "tag": "#noun-numeral",
            "@equal-properties": {"1": ["case", "count"]},
            "@link": {
                "label": "#noun-numeral"
            }
        },
        "@other": {
            "@pos": ["noun"]
        }
    }
}

# Basic object preposition rule (just test case equality and position
{
    "@continue": "#grammar-link",
    "clarify": {
        "@pos": ["preposition"],
        "clarify": {
            "tag": "#noun-preposition",
            "@equal-properties": {"1": ["case"]},
            "@position": {"1": "left"},
            "@link": {
                "label": "#noun-preposition"
            }
        },
        "@other": {
            "@pos": ["noun"]
        }
    }
}

