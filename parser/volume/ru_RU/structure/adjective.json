{
    "name": "adjective",
    "entries": [
        {
            "@id": "modifiers",
            "@inherit": ["any"],
            "@repeats": ["separator::strict"],
            "body": {
                "@id": "modifier",
                "@inherit": ["once"],
                "entries": [
                    {
                        "@id": "adv",
                        "@inherit": ["basic-adv", "once"],
                        "@dependency-of": ["#grammar"]
                    }
                ]
            }
        },
        {
            "@id": "core",
            "@inherit": ["basic-adj", "once", "anchor"]
        },
        {
            "@id": "dependencies",
            "@inherit": ["any"],
            "@repeats": ["separator::strict"],
            "body": {
                "@id": "dependency",
                "@inherit": ["once"],
                "uniq-items": [
                    {
                        "@id": "entity",
                        "@inherit": ["once"],
                        "@dependency-of": ["#grammar"],
                        "@includes": {"name": "entity-list", "is_static": true}
                    }
                ]
            }
        }
    ]
}
